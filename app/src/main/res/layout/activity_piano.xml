<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="com.example.amechy.accesoadatostema1.Piano">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/btnDo"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnRe"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnMi"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnFa"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnSol"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnLa"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnSi"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnDo2"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/btnRe2"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@android:color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:weightSum="1">


        <Button
            android:id="@+id/btnReB"
            android:layout_width="23dp"
            android:layout_height="75dp"
            android:layout_marginLeft="29dp"
            android:background="@android:color/black"
            android:text="Button" />

        <Button
            android:id="@+id/btnMiB"
            android:layout_width="23dp"
            android:layout_height="75dp"
            android:layout_marginLeft="12dp"
            android:background="@android:color/black"
            android:text="Button" />

        <Button
            android:id="@+id/btnSolB"
            android:layout_width="23dp"
            android:layout_height="75dp"
            android:layout_marginLeft="45dp"
            android:background="@android:color/black"
            android:text="Button" />

        <Button
            android:id="@+id/btnLaB"
            android:layout_width="23dp"
            android:layout_height="75dp"
            android:layout_marginLeft="12dp"
            android:background="@android:color/black"
            android:text="Button" />

        <Button
            android:id="@+id/btnSiB"
            android:layout_width="23dp"
            android:layout_height="75dp"
            android:layout_marginLeft="11dp"
            android:background="@android:color/black"
            android:text="Button" />

        <Button
            android:id="@+id/btnRe2B"
            android:layout_width="23dp"
            android:layout_height="75dp"
            android:layout_marginLeft="44dp"
            android:background="@android:color/black"
            android:text="Button" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
